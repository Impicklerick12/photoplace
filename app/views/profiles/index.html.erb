<div class="container">
  <section class="profiles">
    <div class="columns">
      <% @profiles.each do |profile| %>
      <div class="column is-one-third">
        <div class="card">
          <div class="card-content">
            <div class="media">
              <div class="media-left">
                <figure class="image is-48x48">
                  <%= image_tag profile_photo(profile), class:'is-rounded' %>
                </figure>
              </div>
              <div class="media-content">
                <p class="title is-4"><%= profile.name %></p>
                <p class="subtitle is-6">@<%= profile.name.split.join("_").downcase %></p>
              </div>
            </div>
            <div class="content"><%= profile.description %></div>
          </div>
          <footer class="card-footer">
            <%= link_to 'View Profile', profile, class:'card-footer-item' %>
          </footer>
        </div>
      </div>
      <% end %>
    </div>
  </section>
</div>
