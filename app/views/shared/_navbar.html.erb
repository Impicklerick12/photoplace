<div class="container is-fluid">
  <nav class="navbar" role="navigation" aria-label="main navigation">
    <div class="navbar-brand">
      <a class="navbar-item" href="https://bulma.io">
        <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
      </a>

      <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
        <span aria-hidden="true"></span>
      </a>
    </div>

    <div id="navbarBasicExample" class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item"<%= link_to "Home", root_path %></a>

        <a class="navbar-item" <%= link_to "View All Photographers", profiles_path %></a>

        <a class="navbar-item" <%= link_to "How this works!", help_path %></a>
      </div>

      <div class="navbar-end">
        <div class="navbar-item">
          <div class="buttons">
            <% if user_signed_in? && !Profile.exists?(user_id: current_user.id)%>
              <a class="button is-info is-outlined" <%= link_to "Create Photographer Profile!", new_profile_path %></a>
            <% elsif user_signed_in? && Profile.exists?(user_id: current_user.id)%>
              <a class="button is-danger is-outlined" <%= link_to "View My Profile", profile_path(current_user.profile.id) %></a>
            <% end %>
            <% if user_signed_in? %>
              <a class="button is-primary is-outlined" <%= link_to current_user.email, edit_user_registration_path %></a>
              <a class="button is-outlined" <%= link_to "Log Out", destroy_user_session_path, method: :delete %></a>
            <% else %>
              <a class="button is-primary is-outlined" <%= link_to "Sign Up", new_user_registration_path %></a>
              <a class="button is-outlined" <%= link_to "Log In", new_user_session_path %></a>
            <% end %>
            </div>
        </div>
      </div>
    </div>
  </nav>
  <script type="text/javascript">
    (function() {
      var burger = document.querySelector('.burger');
      var nav = document.querySelector('#'+burger.dataset.target);
    
      burger.addEventListener('click', function(){
        burger.classList.toggle('is-active');
        nav.classList.toggle('is-active');
      });
    })();
  </script>
</div>